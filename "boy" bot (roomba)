#include <kipr/wombat.h>

void drive(int speed, int time)
{ 
    create_connect();
    create_drive_direct(-speed, -speed);
    msleep(time);
    create_disconnect();
    
    
}
void reverse(int speed, int time)
{
    create_connect();
    create_drive_direct(speed, speed);
    msleep(time);
    create_disconnect();
}
void turnRight(int speed, int time)
{
    create_connect();
    create_drive_direct(speed, -speed);
    msleep(time);
    create_disconnect();
    
}
void turnLeft(int speed, int time)
{
    create_connect();
    create_drive_direct(-speed, speed);
    msleep(time);
    create_disconnect();

}
